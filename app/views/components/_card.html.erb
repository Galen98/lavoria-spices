<div class="col-md-3"> 
<div class="card shadow-0 border-0 rounded-3" style="width: 100%; height: 100%;">
  <img src="<%= product[:image_url] %>" class="card-img-top" alt="Sunset Over the Sea"
  style="height: 100%; object-fit: cover;"/>
  <div class="card-body">
    <h6 class="txt-blacks font-lights"><%= product[:name] %></h6>
    <p class="card-text">
    <p class="text-primer fw-semibold"><%= number_to_currency(product[:price], unit: 'USD') %></p>
    </p>
  </div>
</div>
</div>