<section class="vh-100 mb-5">
  <div class="container py-5">
  <div class="row d-flex justify-content-center align-items-center">
      <div class="col col-xl-6">
  <div class="card shadow-0 border" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-12 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">
              <div class="d-flex align-items-center mb-3 pb-1">
                    <h3 class="txt-blacks fw-bold">Edit Profile</h3>
                  </div>
<%= form_for @profile, url: profile_path, method: :patch do |f| %>
  <div class="field">
    <%= f.label :first_name, class: "form-label" %>
    <%= f.text_field :first_name, class:"form-control form-control-lg" %>
  </div>

  <div class="field">
    <%= f.label :last_name,  class: "form-label mt-3" %>
    <%= f.text_field :last_name, class:"form-control form-control-lg" %>
  </div>

  <div class="field">
    <%= f.label :address, class: "form-label mt-3" %>
    <%= f.text_field :address, class:"form-control form-control-lg" %>
  </div>

  <div class="field">
  <%= f.label :gender, class: "form-label mt-3" %>
  <%= f.select :gender, options_for_select([['Male', 'male'], ['Female', 'female'], ['Other', 'other']], @profile.gender), {}, class: 'form-control form-control-lg' %>
  </div>

  <!-- Add more fields as needed -->

  <div class="actions">
    <%= f.submit "Update Profile", class: "mt-3 btn btn-dark shadow-0 border btn-rounded text-capitalize", id: "btn-dark" %>
  </div>
<% end %>
</div>
</div>
</div>
</div>
</div>
</div>
</div>
</section>